<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="FavorsPage.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Favors</title>
</head>
<body>
    <img class="logo" src="Storks Simple Logo.png" alt="Logo">
    <img class="logo" src="StorksLogoTransparent.png" alt="Logo">

    <h1>[Users] Favors</h1>
    <h2>Active Favors</h2>

    <div class="table-wrapper">
        <table class="fl-table">
            <tr>
                <th>Scheduled Date</th>
                <th>Requested</th>
                <th>Assigned</th>
                <th>Title</th>
                <th>Location</th>
                <th>Details</th>
              </tr>
            </thead>
            <tbody>
              <% Object.keys(favors).forEach((favorId) => { %>
                <tr>
                    <td><%= favors[favorId].scheduled_date %></td>
                    <td><%= favors[favorId].user_requested %></td>
                    <td><%= favors[favorId].user_assigned %></td>
                    <td><%= favors[favorId].title %></td>
                    <td><%= favors[favorId].location %></td>
                    <td><%= favors[favorId].details %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
    </div>

    <h2>Completed Favors</h2>

    <div class="table-wrapper">
        <table class="fl-table">
            <tr>
                <th>Date Completed</th>
                <th>Requested</th>
                <th>Assigned</th>
                <th>Title</th>
                <th>Location</th>
                <th>Details</th>
              </tr>
            </thead>
            <tbody>
              <% Object.keys(favors).forEach((favorId) => { %>
                <tr>
                    <td><%= favors[favorId].completed_date %></td>
                    <td><%= favors[favorId].user_requested %></td>
                    <td><%= favors[favorId].user_assigned %></td>
                    <td><%= favors[favorId].title %></td>
                    <td><%= favors[favorId].location %></td>
                    <td><%= favors[favorId].details %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
    </div>
  </body>
</html>
